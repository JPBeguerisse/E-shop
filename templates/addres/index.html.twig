{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du lieu</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Téléphone</th>
                <th>Ville</th>
                <th>Pay</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.title }}</td>
                <td>{{ address.lastName }}</td>
                <td>{{ address.address }}</td>
                <td>{{ address.cp }}</td>
                <td>{{ address.phone }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>
                    <a href="{{ path('app_addres_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('app_addres_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_addres_new') }}">Create new</a>
{% endblock %}
